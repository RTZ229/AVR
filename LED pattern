#include <avr/io.h>
#define F_CPU 1600000UL
#include<util/delay.h>
int main(void)
//8 LED lit up in a particular pattern
{
	DDRA = 0xff;
	DDRB = 0xff;
	DDRC = 0xff;
	DDRD = 0xff;
	int i;
	
    while(1)
    {
		PORTA = 0;
		for(i=0;i<8;i++)
		{
			PORTA ^= (1<<i);
			_delay_ms(500); 
		}
		PORTA = 0;
		
		for(i=7;i>=0;i--)
		{
			PORTA ^= (1<<i);
			_delay_ms(500);
		
		}
    }
	}
